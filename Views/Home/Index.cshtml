@model List<ListaPedidos.Models.Pedido>

@{
    ViewData["Title"] = "Lista de Pedidos";
}

<div style="max-width: 1000px; margin: 40px auto; padding: 20px;">
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2 style="color: #333;">Pedidos</h2>
        <a asp-controller="Pedidos" asp-action="Create" 
           style="background-color: #007bff; color: white; padding: 10px 20px; border-radius: 8px; text-decoration: none; font-weight: 600;">
            + Novo Pedido
        </a>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <table class="pedido-table">
            <thead>
                <tr>
                    <th>Cliente</th>
                    <th>Produto</th>
                    <th>Quantidade</th>
                    <th>Data</th>
                    <th style="text-align:center;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.NomeCliente</td>
                        <td>@p.Produto</td>
                        <td>@p.Quantidade</td>
                        <td>@p.DataPedido.ToShortDateString()</td>
                        <td style="text-align:center;">
                            <a asp-action="Edit" asp-route-id="@p.Id" 
                               style="margin-right: 10px; color: #007bff; font-weight: bold;">Editar</a>
                            <a asp-action="Delete" asp-route-id="@p.Id" 
                               style="color: #dc3545; font-weight: bold;">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="color: #666; font-style: italic;">Nenhum pedido para mostrar.</p>
    }
</div>

<style>
  .pedido-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0 12px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 20px rgba(0, 123, 255, 0.15);
  }

  .pedido-table thead tr {
    background-color: #0056b3;
    color: #fff;
    font-weight: 600;
    text-transform: uppercase;
  }

  .pedido-table th,
  .pedido-table td {
    padding: 16px 20px;
    text-align: left;
  }

  .pedido-table tbody tr {
    background: linear-gradient(90deg, #e3f2fd 0%, #ffffff 100%);
    box-shadow: 0 4px 10px rgba(0, 123, 255, 0.1);
    border-radius: 10px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .pedido-table tbody tr:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0, 123, 255, 0.25);
  }

  .pedido-table tbody tr:last-child td {
    border-bottom: none;
  }
</style>
