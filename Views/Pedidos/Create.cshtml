@model ListaPedidos.Models.Pedido

@{
    ViewData["Title"] = "Novo Pedido";
}

<style>
    body {
        background-color: #f2f4f8;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-card {
        max-width: 550px;
        margin: 60px auto;
        padding: 40px;
        background-color: #fff;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.5s ease;
    }

    .form-card h1 {
        text-align: center;
        margin-bottom: 25px;
        color: #333;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: 600;
        display: block;
        margin-bottom: 8px;
        color: #333;
    }

    .form-control {
        width: 100%;
        padding: 12px;
        font-size: 15px;
        border: 1px solid #ccc;
        border-radius: 8px;
        box-sizing: border-box;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #007bff;
        outline: none;
        background-color: #f9fbff;
    }

    .text-danger {
        font-size: 13px;
        color: #dc3545;
        margin-top: 4px;
        display: block;
    }

    .btn-submit {
        width: 100%;
        padding: 12px;
        background-color: #007bff;
        color: #fff;
        font-weight: bold;
        font-size: 16px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: 10px;
    }

    .btn-submit:hover {
        background-color: #0056b3;
    }

    .btn-cancel {
        display: block;
        text-align: center;
        margin-top: 15px;
        text-decoration: none;
        color: #6c757d;
        font-size: 14px;
        transition: color 0.3s;
    }

    .btn-cancel:hover {
        color: #343a40;
    }

    /* Corrigido: keyframes fora do Razor */
</style>

<!-- Keyframes fora do Razor pra evitar erro -->
<style>

</style>

<div class="form-card">
    <h1>Criar Novo Pedido</h1>

    <form asp-action="Create" method="post" class="form">
        <div class="form-group">
            <label for="NomeCliente">Nome do Cliente</label>
            <input asp-for="NomeCliente" class="form-control" placeholder="Digite o nome completo" />
            <span asp-validation-for="NomeCliente" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Produto">Produto</label>
            <input asp-for="Produto" class="form-control" placeholder="Ex: Camiseta Preta M" />
            <span asp-validation-for="Produto" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="Quantidade">Quantidade</label>
            <input asp-for="Quantidade" type="number" class="form-control" placeholder="Ex: 2" />
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-submit">Salvar Pedido</button>
        <a href="/Pedidos" class="btn-cancel">Cancelar</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
